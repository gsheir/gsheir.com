# Environment Variables for Railway Deployment
# Copy these to your Railway project environment variables

# Core Django Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=*.up.railway.app,*.railway.app,gsheir.com,www.gsheir.com

# Database Configuration
# For production (Railway will provide this automatically when you add PostgreSQL)
DATABASE_URL=postgres://username:password@host:port/database

# For local development with Docker
POSTGRES_DB=weuro2025
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Railway Environment (set automatically by Railway)
RAILWAY_ENVIRONMENT=production

# Optional: Custom domain settings
RAILWAY_STATIC_URL=

# Logging level
LOG_LEVEL=INFO
